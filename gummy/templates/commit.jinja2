{% extends "base.jinja2" %}
{% import "macros.jinja2" as macros %}

{% block nav %}
<ul>
	<li class="index"><a href="{{route_url("index")}}">Index</a></li>
	<li class="project"><a href="{{route_url("project", project=project.name)}}">Project: {{project.name}}</a></li>
	<li class="branch"><a href="{{route_url("branch", project=project.name, branch=branch.name)}}">Branch: {{branch.name}}</a></li>
	<li class="commit"><a href="{{route_url("commit", project=project.name, branch=branch.name, commit=commit.name)}}">Commit: {{commit.name}}</a></li>
	<li class="end">&nbsp;</li>
</ul>
{% endblock %}

{% block content %}
<ul class="eventlist">
	{% for event in events %}
		{% if event.type == "comment" %}
			{{ macros.comment(event) }}
		{% else %}
			<li class='commit'>
				<div class="header">
					<span class="icon">
						{{avatar(event.author, 48)}}
					</span>
					<span class="title">
                        Commit Details
					</span>
					<span class="timestamp">
						{{name(event.author)}} posted
						<time datetime="{{event.timestamp.isoformat()}}">{{event.timestamp}}</time>
					</span>
				</div>
				<div class="message">
					{{event.message}}
				</div>
				<div class="diff">
					<div class="diff-content">
						<pre>{{event.diff}}</pre>
					</div>
				</div>
			</li>
		{% endif %}
	{% endfor %}
	{{ macros.commentbox(project.name, branch.name, commit.name) }}
</ul>
{% endblock %}
